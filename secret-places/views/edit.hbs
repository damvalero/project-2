<h1 class=my-4>Edit Places</h1>
<form method="POST" action="/edit/{{place._id}}">
 <div class='form-group'>
    <label for="category">Choose a Category:</label>
    <select id="category" name="category">
        <option value="">Choose An Option</option>
        <option value="tosee">To See</option>
        <option value="toeat">To Eat</option>
        <option value="todrink">To Drink</option>
    </select>
  </div>
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" placeholder="Place Name" value="{{place.name}}">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea name="description" class="form-control" id="description" cols="50" rows="6" >{{place.description}}</textarea>
    <button>Submit</button>
  </div>
   </form>