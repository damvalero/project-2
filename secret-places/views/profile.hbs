<h1>Profile Page</h1>
<h2>Welcome {{user.email}}!</h2>
<h2>My Places</h2>

<div class="row">
        {{#each places}}
            <div class="col-sm-3">
            <div class="card">
            <div class="card-body">
            <img class="placeImgPro card-img-top" src="{{this.image}}" alt="">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <button><a href='/edit/{{this._id}}'>Edit Place</a></button>
            <button><a href='/delete/{{this._id}}'>Delete Place</a></button>
            </div>
            </div>
            </div>
        {{/each}}
  </div>
