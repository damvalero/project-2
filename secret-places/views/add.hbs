 <h2>Add a Secret Place!</h2>
<button id='location-btn'>Get My Location</button>

 <form method="POST" action="/addPlace" enctype="multipart/form-data">
 <div class='form-group'>
    <div class="form-group">
      <label for="location">Location:</label>
      <input id="location-input" type="text" name="location" placeholder="Location">
    </div>
    <label for="category">Choose a Category:</label>
    <select id="category" name="category">
        <option value="">Choose An Option</option>
        <option value="tosee">To See</option>
        <option value="toeat">To Eat</option>
        <option value="todrink">To Drink</option>
    </select>
  </div>
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" placeholder="Place Name">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea name="description" id="description" cols="50" rows="6"></textarea>
    <h2>Add a photo</h2>
    <input type="file" name="file">
    <button>Submit</button>
  </div>
   </form>

  <script src="scripts/add.js"></script>

 