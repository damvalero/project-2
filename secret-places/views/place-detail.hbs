<h1>
{{place.name}}
</h1>

<h2>
    {{place.description}}
</h2>

<h3>
{{place.category}}
</h3>


{{#each place.reviews}}
<p>Title:</p><p>{{this.title}}</p>
<p>{{this.comment}}</p>
{{/each}}

<h3>Add a review</h3>
<form action="/add-comment/{{place._id}}" method="post">
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="text" name="email">
  </div>
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="title" id="description"></input>

       <label for="comment">Comment:</label>
    <input type="text" name="comment" id="comment"></input>

    <button type="submit" class="btn btn-primary">Submit</button>
  </div>


</form>

    